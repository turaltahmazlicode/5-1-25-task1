@model List<Doctor>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Doctor</h4>
                    <div class="table-responsive">
                        <table class="table table">
                            <a class="btn btn-warning" asp-action="Create">Create</a>
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Id </th>
                                    <th> First Name </th>
                                    <th> Last Name </th>
                                    <th> Department Id </th>
                                    <th> Image Url </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int count = 1;
                                }
                                @foreach (Doctor doctor in Model)
                                {
                                    <tr>
                                        <td> @count </td>
                                        <td> @doctor.Id </td>
                                        <td> @doctor.FirstName </td>
                                        <td> @doctor.LastName </td>
                                        <td> @doctor.Department.Title </td>
                                        <td><div width="200" height="200"><img src="~/Upload/@doctor.ImageUrl" /></div></td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@doctor.Id">Edit</a>
                                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@doctor.Id">Details</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@doctor.Id">Delete</a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

